        "gpu_cooling.ko",
        "gs101_spmic_thermal.ko",
        "gs101_thermal.ko",
        "gsc-spi.ko",
        "gvotable.ko",
        "i2c-dev.ko",
        "keycombo.ko",
        "keydebug.ko",
        "logbuffer.ko",
        "max77759_contaminant.ko",
        "max77759_helper.ko",
        "odpm.ko",
        "phy-exynos-mipi.ko",
        "phy-exynos-mipi-dsim.ko",
        "phy-exynos-usbdrd-super.ko",
        "pktgen.ko",
        "rtc-s2mpg10.ko",
        "sbb-mux.ko",
        "sg.ko",
        "slg46826.ko",
        "snd-soc-max98357a.ko",
        "snd-soc-rl6231.ko",
        "snd-soc-rt5682.ko",
        "snd-soc-rt5682-i2c.ko",
        "softdog.ko",
        "spidev.ko",
        "sscoredump.ko",
        "stmvl53l1.ko",
