        "trusty-ipc.ko",
        "trusty-irq.ko",
        "trusty-log.ko",
        "trusty-test.ko",
        "trusty-virtio.ko",
        "usb_f_dm.ko",
        "usb_f_dm1.ko",
        "usb_psy.ko",
        "usbc_cooling_dev.ko",
        "videobuf2-dma-sg.ko",
        "zsmalloc.ko",
    ],
    # Keep in sync with build.config.common
    toolchain_version = "r433403",
    deps = [
        "//prebuilts/misc/linux-x86/libufdt:mkdtimg",
