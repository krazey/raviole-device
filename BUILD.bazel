        "arch/arm64/boot/dts/google/gs101-dpm-userdebug.dtbo",
    ],
    base_kernel = "//common:kernel_aarch64",
    build_config = ":build.config.slider.mix",
    kconfig = "Kconfig",
    module_outs = [
        # keep sorted
        "arm_dsu_pmu.ko",
        "at24.ko",
        "bbd.ko",
        "bc_max77759.ko",
        "bcm47765.ko",
        "debug-reboot.ko",
